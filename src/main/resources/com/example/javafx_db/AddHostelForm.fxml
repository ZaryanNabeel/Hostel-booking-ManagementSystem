<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="489.0" prefWidth="380.0" spacing="10" style="-fx-padding: 20; -fx-background-color: #FFFACD;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_db.AddHostelController">
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Fill these Fields">
      <font>
         <Font name="Century Gothic Bold" size="20.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" right="190.0" />
      </VBox.margin>
   </Text>

    <TextField fx:id="nameField" promptText="Hostel Name" />
    <TextField fx:id="locationField" promptText="Location" />
    <TextField fx:id="addressField" promptText="Address" />
    <TextField fx:id="contactField" promptText="Contact Number" />
    <TextField fx:id="imageUrlField" promptText="Image URL" />
    <TextField fx:id="genderField" promptText="Gender" />
    <TextField fx:id="ratingField" promptText="Rating (0-5)" />
    <TextField fx:id="priceField" promptText="Room Price (per month)" />
    <TextField fx:id="amenitiesField" promptText="Amenities (comma-separated)" />

    <Button onAction="#handleAddHostel" style="-fx-background-color: green; -fx-text-fill: white;" text="Add Hostel">
      <VBox.margin>
         <Insets right="1.0" top="20.0" />
      </VBox.margin>
      <effect>
         <SepiaTone />
      </effect></Button>
</VBox>

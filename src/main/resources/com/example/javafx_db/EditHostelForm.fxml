<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.SepiaTone?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="489.0" prefWidth="380.0" spacing="10" style="-fx-padding: 20; -fx-background-color: #FFFACD;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_db.EditHostelFormController">

    <!-- Header -->
    <Text text="Edit Hostel Details">
        <font>
            <Font name="Century Gothic Bold" size="20.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" right="200.0" />
        </VBox.margin>
    </Text>

    <!-- Form Fields -->
    <TextField fx:id="nameField" promptText="Hostel Name" />
    <TextField fx:id="locationField" promptText="Location" />
    <TextField fx:id="addressField" promptText="Address" />
    <TextField fx:id="contactField" promptText="Contact Number" />
    <TextField fx:id="priceField" promptText="Room Price (per month)" />
    <TextField fx:id="ratingField" promptText="Rating (0-5)" />
    <TextField fx:id="amenitiesField" promptText="Amenities (comma-separated)" />
    <TextField fx:id="imageUrlField" promptText="Image URL" />
    <TextField fx:id="genderField" promptText="Gender" />

    <!-- Save Button -->
    <Button onAction="#handleSave" style="-fx-background-color: #8B6B4C; -fx-text-fill: #FFF8DC; -fx-font-weight: bold; -fx-background-radius: 4;" text="Save">
        <effect>
            <SepiaTone />
        </effect>
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
      <font>
         <Font size="13.0" />
      </font>
    </Button>
</VBox>
